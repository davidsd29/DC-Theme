
<div class='container'>
    <section class='grid'>
        {% if title %}
            <h1 class='{{ title_size }}'>{{ title }}</h1>
        {% endif %}
        {% include 'atoms/text.twig' with {'text': content|raw} %}
        <div class='flex gap-5 mt-4'>
            {% if buttons %}
                {% for button in buttons %}
                    {% include 'atoms/button.twig' with button %}
                {% endfor %}
            {% endif %}
        </div>
    </section>
</div>
