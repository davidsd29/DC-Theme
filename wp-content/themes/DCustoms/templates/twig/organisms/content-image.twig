{% set content_block = {
    title: title,
    title_size: title_size,
    sub_title: sub_title,
    subtitle_color: subtitle_color,
    content: content,
    buttons: buttons
} %}
<section class='w-screen p-2 py-10 md:p-10 md:py-14'>
    <div class='flex flex-col items-center md:flex-row-reverse gap-5 mx-auto justify-center container'>
        <section class='flex flex-col md:w-1/2 w-full space-y-4'>
            {% include 'molecules/side-content.twig' with content_block %}
        </section>
        <figure>
            {% include 'atoms/image.twig' with {'image': image_id} %}
        </figure>
    </div>
</section>
