<a href='{{ link }}' class='relative block flex-col space-y-3 p-2 w-full md:w-64 -z-10'>
    <span class='absolute top-14 left-6 rounded-xl p-1 px-3 z-10 text-sm {{ style }}'>{{ category }}</span>
    {% include 'atoms/image.twig' with {
        image: image_id,
        image_classes: 'aspect-square object-cover rounded-lg md:h-72 w-full md:w-auto mb-2',
    } %}
    {% if date %}
        <div class='flex items-start leading-4 space-x-2 text-sm'>
            {% include 'atoms/icon.twig' with {
                icon: 'today',
                color: 'text-secondary',
            } %}
            <p class='font-semibold'>{{ date }}</p>
        </div>
    {% endif %}
    {% if title %}
        <p class='font-bold text-lg max-w-auto'>{{ title }}</p>
    {% endif %}
</a>
