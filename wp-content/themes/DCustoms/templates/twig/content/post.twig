{% extends 'content/singular.twig' %}
{% block title %}
  <section class="w-full bg-blue-600">
    <div class="container mx-auto px-28 py-14">
      <div class="text-left font-bold">
        <h1 class="text-4xl text-white">
          {{ post.post_title }}
        </h1>
        <p class="text-2xl text-gray-50 text-right text-opacity-60">
          Blog
        </p>
      </div>
    </div>
  </section>
{% endblock %}
{% block before_content %}
<section class="w-full">
  <div class="container mx-auto px-28 py-14 text-right">
    {% endblock %}
    {% block after_content %}
  </div>
</section>
{% endblock %}
